{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "lib": [ "es2015", "dom" ],
        "outDir": "./build/dist",
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
      "node_modules",
      "./src/polyfill.ts"
    ]
}
